extends layout

block content
    
  
  h2= title  
  table.table.table-hover
      thead
        tr
          th.col-6(scope='col') Title
          th.col-3(scope='col') Author
          th.col-2(scope='col') Genre
          th.col-1(scope='col') Year
      tbody
        each book in books
          tr
            td(scope='row')
              a(href=`/books/${book.id}`)= book.title
            td= book.author
            td= book.genre
            td= book.year
  div.row.justify-content-between
    div.col-auto
      - var i = 0;
      nav      
        ul.pagination
          while i < pages
            - var pageNumber = i++ + 1;  
            if(pageNumber == page) 
              li.page-item.active    
                a.page-link(href=`/books/page-${pageNumber}`)= pageNumber
            else
              li.page-item
                a.page-link(href=`/books/page-${pageNumber}`)= pageNumber
    div.col-auto
      a.btn.btn-primary(href='/books/new') Create New Book
